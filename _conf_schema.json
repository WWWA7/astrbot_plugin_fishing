{
  "secret_key": {
    "description": "webui的密钥",
    "type": "string",
    "hint": "登录管理界面的密钥，建议使用随机字符串",
    "default": "SecretKey"
  },
  "port": {
    "description": "webui的端口",
    "type": "int",
    "hint": "请确保端口未被占用",
    "default": 7777
  },
  "is_tax": {
    "description": "是否启用税收",
    "type": "bool",
    "hint": "税收的开关",
    "default": true
  },
  "threshold": {
    "description": "税收的起征点",
    "type": "int",
    "hint": "税收的起征点，低于此值不收税",
    "default": 100000
  },
  "step_coins": {
    "description": "税收的步长",
    "type": "int",
    "hint": "税收的步长，超过起征点后每增加此值税率增加",
    "default": 100000
  },
  "step_rate": {
    "description": "税收的步长税率",
    "type": "float",
    "hint": "税收的步长税率，超过起征点后每增加step_coins税率增加",
    "default": 0.01
  },
  "min_rate": {
    "description": "税收的起点税率",
    "type": "float",
    "hint": "税收的初始税率，达到起征点后开始收税的初始税率",
    "default": 0.001
  },
  "max_rate": {
    "description": "税收的最大税率",
    "type": "float",
    "hint": "税收的最大税率，超过此值不再增加",
    "default": 0.2
  },
  "fish_cooldown_seconds": {
    "description": "钓鱼的冷却时间",
    "type": "int",
    "hint": "每次钓鱼后的冷却时间，单位为秒",
    "default": 180
  },
  "steal_cooldown_seconds": {
    "description": "偷鱼的冷却时间",
    "type": "int",
    "hint": "每次偷鱼后的冷却时间，单位为秒",
    "default": 14400
  },
  "user_initial_coins": {
    "description": "用户初始金币",
    "type": "int",
    "hint": "新用户注册时的初始金币数量",
    "default": 200
  },
  "market_listing_tax_rate": {
    "description": "市场上架税率",
    "type": "float",
    "hint": "在市场上架物品时收取的税率",
    "default": 0.05
  },
  "sell_prices": {
    "description": "物品(鱼竿和饰品)的出售价格",
    "type": "object",
    "items": {
      "by_rarity_1": {
        "type": "int",
        "default": 100,
        "description": "稀有度1的出售价格"
      },
      "by_rarity_2": {
        "type": "int",
        "default": 500,
        "description": "稀有度2的出售价格"
      },
      "by_rarity_3": {
        "type": "int",
        "default": 2000,
        "description": "稀有度3的出售价格"
      },
      "by_rarity_4": {
        "type": "int",
        "default": 5000,
        "description": "稀有度4的出售价格"
      },
      "by_rarity_5": {
        "type": "int",
        "default": 10000,
        "description": "稀有度5的出售价格"
      }
    }
  },
  "exchange": {
    "description": "交易所配置",
    "type": "object",
    "items": {
      "account_fee": {
        "type": "int",
        "default": 100000,
        "description": "交易所开户费用"
      },
      "volatility": {
        "type": "object",
        "items": {
          "dried_fish": {
            "type": "float",
            "default": 0.1,
            "description": "鱼干价格波动率（±10%）"
          },
          "fish_roe": {
            "type": "float",
            "default": 0.5,
            "description": "鱼卵价格波动率（±50%）"
          },
          "fish_oil": {
            "type": "float",
            "default": 0.25,
            "description": "鱼油价格波动率（±25%）"
          }
        }
      },
      "event_chance": {
        "type": "float",
        "default": 0.1,
        "description": "鱼油事件触发概率（10%）"
      },
      "initial_prices": {
        "type": "object",
        "items": {
          "dried_fish": {
            "type": "int",
            "default": 6000,
            "description": "鱼干初始价格（低风险低收益）"
          },
          "fish_roe": {
            "type": "int",
            "default": 12000,
            "description": "鱼卵初始价格（高风险高收益）"
          },
          "fish_oil": {
            "type": "int",
            "default": 10000,
            "description": "鱼油初始价格（投机品，事件驱动）"
          }
        }
      }
    }
  }
}